<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_training"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Training.ChooseTrainingActivity">

    <Button
        android:text="Коробка №1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/training1"
        android:layout_marginTop="30dp"
        android:elevation="0dp"
        style="@android:style/Widget.Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Коробка №2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/training1"
        android:layout_alignRight="@+id/training1"
        android:layout_alignEnd="@+id/training1"
        android:layout_marginTop="40dp"
        android:id="@+id/training2"
        style="@android:style/Widget.Button" />

    <Button
        android:text="Коробка №3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/training2"
        android:layout_alignRight="@+id/training2"
        android:layout_alignEnd="@+id/training2"
        android:layout_marginTop="40dp"
        android:id="@+id/training3"
        style="@android:style/Widget.Button" />

    <Button
        android:text="Коробка №4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/training3"
        android:layout_alignRight="@+id/training3"
        android:layout_alignEnd="@+id/training3"
        android:layout_marginTop="40dp"
        android:id="@+id/training4"
        style="@android:style/Widget.Button" />

    <Button
        android:text="Коробка №5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/training4"
        android:layout_alignLeft="@+id/training4"
        android:layout_alignStart="@+id/training4"
        android:layout_marginTop="40dp"
        android:id="@+id/training5"
        style="@android:style/Widget.Button" />


</RelativeLayout>
